<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:padding="@dimen/margin_large"
    android:minHeight="100dp"
    android:minWidth="300dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        >


        <com.example.this_is_ayan.findmyadvocate.Widgets.ProgressView
            android:id="@+id/progress_view"
            android:layout_width="@dimen/standard_height_half"
            android:layout_height="@dimen/standard_height_half"
            app:pv_autostart="true"

            android:layout_gravity="center_vertical|start"
            app:pv_progressStyle="@style/Material.Drawable.CircularProgress.Grey"
            app:pv_progressMode="indeterminate"/>


        <com.example.this_is_ayan.findmyadvocate.Widgets.MyTextViewRegularFont
            android:id="@+id/switch_text"
            android:layout_width="wrap_content"
            android:textSize="@dimen/font_larger"
            android:layout_marginLeft="@dimen/margin_large_x"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:text="Please Wait..."/>




    </LinearLayout>



</FrameLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.this_is_ayan.findmyadvocate.Activities.LogInSignUp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:layout_height="0dp">

        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v4.view.ViewPager>


        <com.example.this_is_ayan.findmyadvocate.Widgets.CirclePageIndicator
            android:id="@+id/indicator"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@android:color/transparent"
            app:centered="true"
            app:fillColor="@color/red"
            app:pageColor="@android:color/white"
            app:radius="@dimen/margin_mini"
            app:strokeColor="@android:color/transparent"
            app:strokeWidth="0dp" />
    </FrameLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/black"
        android:paddingTop="@dimen/margin_small"
        android:paddingLeft="@dimen/margin_medium"
        android:paddingRight="@dimen/margin_medium"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/fb"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_small"
            android:background="@drawable/fb"
            android:gravity="center" />
        <ImageView
            android:id="@+id/google_plus_login"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="@dimen/margin_small"
            android:background="@drawable/google_plus_login"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal" >

            <com.example.this_is_ayan.findmyadvocate.Widgets.MyTextViewRegularFont
                android:id="@+id/login"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:layout_marginRight="@dimen/margin_medium"
                android:text="Log In"
                android:textColor="@color/c_grey_color"
                android:textSize="@dimen/font_medium" />

            <com.example.this_is_ayan.findmyadvocate.Widgets.MyTextViewRegularFont
                android:id="@+id/signup"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/white"
                android:layout_marginLeft="@dimen/margin_medium"
                android:text="Sign Up"
                android:textColor="@color/c_grey_color"
                android:textSize="@dimen/font_medium" />
        </LinearLayout>

    </LinearLayout>




</LinearLayout>
